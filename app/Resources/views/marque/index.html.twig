{% extends 'base.html.twig' %}

{% block body %}
    <h3>Marques list</h3>
    <hr>

   
    <table class="table table-striped  table-bordered">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nom</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for marque in marques %}
            <tr>
                <td><a href="{{ path('admin_marque_show', { 'id': marque.id }) }}">{{ marque.id }}</a></td>
                <td>{{ marque.nom }}</td>
                <td>
                    <ul>
                        <li>
                            <a class="btn btn-sm button-style" href="{{ path('admin_marque_show', { 'id': marque.id }) }}">show</a>
                        </li>
                        <li>
                            <a class="btn btn-sm button-style" href="{{ path('admin_marque_edit', { 'id': marque.id }) }}">edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a class="btn ajouter "href="{{ path('admin_marque_new') }}">Create a new marque</a>
        </li>
    </ul>
{% endblock %}
